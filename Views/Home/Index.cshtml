@model User

<div class="container">

    <h1>Register to this cool site!</h1>
    <a href="/log">Login</a>

    <form asp-action="Register" method="post" class="col-5 mx-auto">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
        </div>

        <div class="form-group">
            <span asp-validation-for="Confirm"></span><br>
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>